<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UsTravel" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/palette6</item>
        <item name="colorPrimaryVariant">@color/palette4</item>
        <item name="colorOnPrimary">@color/palette1</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/palette6</item>
        <item name="colorSecondaryVariant">@color/palette4</item>
        <item name="colorOnSecondary">@color/palette1</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.UsTravel.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.UsTravel.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.UsTravel.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LoginTheme" parent="FirebaseUI">
        <item name="android:windowBackground">@drawable/app_background</item>
    </style>

    <style name="shapeableImageViewRounded" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="roundedCornersImageView" parent="">
        <item name="cornerSize">10%</item>
    </style>
</resources>