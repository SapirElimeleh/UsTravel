<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    android:elevation="8dp"
    android:layout_margin="10dp">


<RelativeLayout
    android:layout_width="150dp"
    android:layout_height="140dp">


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/day_TV_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:minLines="1"
        android:paddingLeft="5dp"
        android:text="DAY 1"
        android:textAlignment="center"
        android:textColor="#BEBEBE"
        android:textSize="25sp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/day_IV_location"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_below="@id/day_TV_name"
        android:layout_marginLeft="17dp"
        app:srcCompat="@drawable/ic_baseline_location_on_24" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/day_TV_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/day_TV_name"
        android:layout_toEndOf="@id/day_IV_location"
        android:maxLines="1"
        android:minLines="1"
        android:text="TRIP_LOCATION"
        android:layout_marginBottom="7dp"
        android:textAlignment="center"
        android:textColor="#BEBEBE"
        android:textSize="12sp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/day_IMG_img"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_below="@id/day_TV_location"
        android:layout_centerInParent="true"
        app:shapeAppearanceOverlay="@style/roundedCornersImageView"
        app:srcCompat="@drawable/ic_launcher_background" />

<!--    <androidx.appcompat.widget.AppCompatImageView-->
<!--        />-->


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/day_IV_arrow"
        android:layout_width="43dp"
        android:layout_height="25dp"
        android:layout_below="@id/day_IMG_img"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-13dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="1dp"
        android:paddingTop="5dp"
        app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />

</RelativeLayout>

</com.google.android.material.card.MaterialCardView>