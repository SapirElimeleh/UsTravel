<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    android:elevation="10dp"
    android:layout_margin="10dp">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="100dp">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/trip_IMG_image"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        app:shapeAppearanceOverlay="@style/shapeableImageViewRounded"
        app:srcCompat="@mipmap/ic_launcher_us_travel_round" />

    <com.google.android.material.textview.MaterialTextView
            android:id="@+id/trip_TV_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/trip_IMG_image"
            android:text="USER_NAME"
            android:textColor="@color/palette6"
            android:textSize="15sp"
            android:paddingLeft="5dp"
            android:maxLines="1"
            android:minLines="1"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"/>

    <LinearLayout
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/trip_IMG_like"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_favorite_border_24" />

        <TextView
            android:id="@+id/trip_TV_numLikes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="23"
            android:textColor="@color/palette4"
            android:textSize="15sp" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/trip_IMG_plain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/trip_TV_userName"
        android:layout_marginStart="6dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="2dp"
        android:layout_toEndOf="@id/trip_IMG_image"
        app:srcCompat="@drawable/ic_baseline_airplanemode_active_24" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/trip_TV_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/trip_TV_userName"
        android:layout_marginStart="7dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@id/trip_IMG_plain"
        android:maxLines="1"
        android:minLines="1"
        android:text="TRIP_LOCATION"
        android:textColor="@color/palette6"
        android:textSize="25sp" />

</RelativeLayout>

</com.google.android.material.card.MaterialCardView>
